<div class="container mt-5">
  <h1 class="text-center">Welcome to the e-commerce chat room</h1>

  <section class="mt-4">
    <form id="form-message" class="row g-3">
      <div class="col-9">
        <input class="form-control" id="input-message" type="text" placeholder="Type your message" required>
      </div>
      <div class="col-3">
        <button type="submit" class="btn btn-primary">Send</button>
      </div>
    </form>
  </section>

  <section class="mt-4">
    <h3>Messages</h3>
    <div id="log-messages" class="border p-3" style="max-height: 300px; overflow-y: auto;"></div>
  </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>