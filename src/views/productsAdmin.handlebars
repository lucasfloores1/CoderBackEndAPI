<h1>Admin Products Table</h1>

<article>
    <h2>Welcome Admin {{user.name}}</h2>  
    <a href="/api/auth/logout">Log Out</a>
</article>

<article>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
        <th scope="col">Category</th>
        <th scope="col">Code</th>
      </tr>
    </thead>
    <tbody>
      {{#each payload}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>${{this.price}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.type}}</td>
          <td>{{this.code}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <!-- Pagination -->
  {{#if hasPagination}}
    <p>Current page: {{page}}</p>
    <nav aria-label="Page navigation">
        <ul class="pagination">
        <li class="page-item {{#unless hasPrevPage}}disabled{{/unless}}">
            <a class="page-link" href="{{prevLink}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item {{#unless hasNextPage}}disabled{{/unless}}">
            <a class="page-link" href="{{nextLink}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        </ul>
    </nav>
  {{/if}}
</article>