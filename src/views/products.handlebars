<div class="container">
    <h1 class="mt-4 mb-4">Product List</h1>
    <article>
        <div class="d-flex justify-content-end">
            <a href="/cart/{{user.cart_id}}" class="btn btn-primary">
                <i class="fas fa-cart"></i> Cart <span class="badge bg-secondary">{{user.cart_products}}</span>
            </a>
            <a href="/api/auth/logout" class="ml-2">Log Out</a>
        </div>
        <h2 id="user-title" user-id="{{user.id}}">Welcome User {{user.name}}</h2>
    </article>
    <div class="row row-cols-1 row-cols-md-3 g-4" id="productsContainer" style="margin-top: 10px">
        {{#each payload}}
        <div class="col" id="{{this._id}}">
            <div class="card text-bg-secondary">
                <div id="productCarousel{{@index}}" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {{#each this.thumbnails}}
                        {{#if @first}}
                        <div class="carousel-item active">
                            <img src="{{this}}" class="d-block w-100" alt="{{../title}} {{@index}}">
                        </div>
                        {{else}}
                        <div class="carousel-item">
                            <img src="{{this}}" class="d-block w-100" alt="{{../title}} {{@index}}">
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel{{@index}}" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel{{@index}}" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text" class="price">$ {{this.price}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary add-to-cart" product-id="{{this._id}}" >Add to cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Pagination -->
    {{#if hasPagination}}
      <div class="row justify-content-center mt-4">
        <div class="col-auto">
          <p>PÃ¡gina actual: {{page}}</p>
        </div>
        {{#if hasPrevPage}}
          <div class="col-auto">
            <a href="{{prevLink}}" class="btn btn-primary" role="button">Anterior</a>
          </div>
        {{/if}}
        {{#if hasNextPage}}
          <div class="col-auto">
            <a href="{{nextLink}}" class="btn btn-primary" role="button">Siguiente</a>
          </div>
        {{/if}}
      </div>
    {{/if}}
</div>
<script src="/js/products.js"></script>