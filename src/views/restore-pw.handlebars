<article class="card text-bg-secondary mb-3">
  <form class="card-body" action="/api/auth/restore-password" method="post">
    <header class="card-title">
      <h1 class="h3 mb-3 font-weight-normal">Restore your password</h1>
    </header>
    <div class="form-group">
      <label for="inputEmail" style="margin-bottom: 5px">Email</label>
      <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Correo" value="{{email}}" required autofocus readonly>
    </div>
    
    <div class="form-group">
      <label for="inputPassword" style="margin-bottom: 5px">New Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="ContraseÃ±a" required>
    </div>
    
    {{#if repeated}}
      <div class="alert alert-danger" role="alert">
        The password entered is the same as the current one. Please choose a different password.
      </div>
    {{/if}}

    <div class="form-group" style="margin-top: 15px">
      <button class="btn btn-primary btn-block" type="submit">Restore Password</button>
    </div>
  </form>
</article>


